<h1>Fotos de propiedades</h1>

<table class="table">
  <thead>
    <tr>
      <th>Foto</th>
      <th>Propiedad</th>
      <th>Capsula</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @property_photos.each do |property_photo| %>
      <tr>
        <td><%= image_tag property_photo.source.url, width: 50 %></td>
        <td><%= link_to property_photo.property.name, public_properties_show_path(property_photo.property_id) %></td>
        <td><%= property_photo.caption %></td>
        <td><%= link_to 'Editar', edit_property_photo_path(property_photo) %></td>
        <td><%= link_to 'Eliminar', property_photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear nueva foto', new_property_photo_path, class: 'btn btn-default' %>
