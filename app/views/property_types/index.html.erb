<h1>Tipos</h1>

<table class="table">
  <thead>
  <tr>
    <th>Nombre</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @property_types.each do |property_type| %>
      <tr>
        <td><%= property_type.name %></td>
        <td><%= link_to 'Editar', edit_property_type_path(property_type) %></td>
        <td><%= link_to 'Eliminar', property_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Tipo', new_property_type_path, class: 'btn btn-default' %>
